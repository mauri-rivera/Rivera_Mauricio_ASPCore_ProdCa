
<form asp-controller="Producto" asp-action="IncluirCategoria" asp-route-ProdId="@ViewBag.ProductoId" method="POST">
    <div class="formulario">
        <h2>Add Category</h2>
        <div class="cuadroFormularioProductoDos">
            <div class="cuadroLista">
                <div class="campoTexto">
                    @{
                        <select name="NombreCategoria">
                            @foreach (var item in Model)
                            {
                                <option class="itemOpcion">@item.Nombre</option>
                            }
                        </select>
                    }
                </div>
            </div>
            <div class="cuadroBoton">
                <button class="boton">Add</button>
            </div>
        </div>
    </div>
</form>